@{
    ViewData["Title"] = "Registration Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-center mb-4">Event Booking Details</h3>

        <div id="details">
            <div class="text-center">
                <div class="spinner-border text-primary"></div>
                <p>Loading details...</p>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {

        const urlParams = new URLSearchParams(window.location.search);
        const id = urlParams.get('id');

        if (!id) {
            $("#details").html("<div class='alert alert-danger'>Invalid registration ID</div>");
            return;
        }

        $.ajax({
            url: "/api/Event/GetRegistrationById/" + id,
            type: "GET",
            success: function (data) {

                $("#details").html(`
                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Registration ID:</strong></div>
                            <div class="col-md-6">${data.registrationId}</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Name:</strong></div>
                            <div class="col-md-6">${data.name}</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Email:</strong></div>
                            <div class="col-md-6">${data.email}</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Mobile:</strong></div>
                            <div class="col-md-6">${data.mobile}</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Adults:</strong></div>
                            <div class="col-md-6">${data.noOfAdults}</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Children:</strong></div>
                            <div class="col-md-6">${data.noOfChildren}</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Total Tickets:</strong></div>
                            <div class="col-md-6">${data.totalTickets}</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Total Amount:</strong></div>
                            <div class="col-md-6">$${data.totalAmount}</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Payment Status:</strong></div>
                            <div class="col-md-6">${data.paymentStatus}</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Booking Status:</strong></div>
                            <div class="col-md-6">
                                <span class="badge bg-success">${data.bookingStatus}</span>
                            </div>
                        </div>
                    `);
            },
            error: function () {
                $("#details").html(`
                        <div class="alert alert-danger text-center">
                            Invalid or expired registration
                        </div>
                    `);
            }
        });
    });
</script>
