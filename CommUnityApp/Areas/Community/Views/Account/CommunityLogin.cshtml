@{
    ViewData["Title"] = "Business Login – Indian Community Network";
    Layout = null;   // Standalone auth page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        /* ===== RESET ===== */
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            min-height: 100vh;
            font-family: "Inter", "Segoe UI", Arial, sans-serif;
            background: #fff5f1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 30px;
        }

        /* ===== CARD ===== */
        .card {
            width: 100%;
            max-width: 420px;
            background: #ffffff;
            padding: 42px 36px;
            border-radius: 22px;
            box-shadow: 0 25px 60px rgba(0,0,0,.08);
        }

            /* ===== HEADER ===== */
            .card h2 {
                text-align: center;
                font-size: 26px;
                font-weight: 700;
                margin: 0 0 6px;
                color: #0f172a;
            }

        .subtitle {
            text-align: center;
            font-size: 14px;
            color: #64748b;
            margin-bottom: 34px;
        }

        /* ===== LABEL ===== */
        label {
            font-size: 14px;
            font-weight: 600;
            color: #334155;
            margin-bottom: 8px;
            display: block;
        }

        /* ===== INPUT ===== */
        input {
            width: 100%;
            height: 46px;
            padding: 0 16px;
            border-radius: 999px;
            border: 1px solid #e2e8f0;
            background: #f8fafc;
            font-size: 14px;
            margin-bottom: 22px;
            outline: none;
            transition: all .25s ease;
        }

            input::placeholder {
                color: #94a3b8;
            }

            input:focus {
                background: #ffffff;
                border-color: #fb923c;
                box-shadow: 0 0 0 3px rgba(251,146,60,.18);
            }

        /* ===== BUTTON ===== */
        .btn-login {
            width: 100%;
            height: 52px;
            border-radius: 999px;
            border: none;
            background: #f97316;
            color: #ffffff;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all .3s ease;
        }

            .btn-login:hover {
                background: #ea580c;
                box-shadow: 0 10px 28px rgba(249,115,22,.35);
            }

            .btn-login:active {
                transform: scale(.98);
            }

        /* ===== LINKS ===== */
        .links {
            margin-top: 24px;
            text-align: center;
            font-size: 14px;
            color: #475569;
        }

            .links a {
                color: #f97316;
                font-weight: 600;
                text-decoration: none;
            }

                .links a:hover {
                    text-decoration: underline;
                }

        /* ===== MOBILE ===== */
        @@media (max-width: 480px) {
            .card {
                padding: 34px 26px;
                border-radius: 18px;
            }

                .card h2 {
                    font-size: 24px;
                }
        }

    </style>
</head>

<body>

    <div class="card">
        <h2>💼 Community Login</h2>
        <div class="subtitle">Access your Community dashboard</div>

        <form method="post"
              action="@Url.Action("Login", "Account", new { area = "Community" })">

            <div class="input-group">
                <span class="input-group-text">
                    <i class="fa-regular fa-user"></i>
                </span>
                <input name="userName"
                       class="form-control"
                       placeholder="Username"
                       required />
            </div>

            <div class="input-group">
                <span class="input-group-text">
                    <i class="fa-solid fa-lock"></i>
                </span>
                <input name="password"
                       type="password"
                       class="form-control"
                       placeholder="Password"
                       required />
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-2">
                    @ViewBag.Error
                </div>
            }
            <button type="submit" class="btn btn-login">
Login            </button>
        </form>



        <div class="links">
            New business?
            <a href="@Url.Content("~/home/Businessregister")">Register here</a>
        </div>
    </div>

</body>
</html>
