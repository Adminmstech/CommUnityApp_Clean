<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Business Portal</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --sidebar-bg: #0f172a;
            --sidebar-hover: #1e293b;
            --primary: #2563eb;
            --accent: #3b82f6;
        }

        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
        }

        .layout {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 260px;
            background: var(--sidebar-bg);
            color: #fff;
            padding: 24px 18px;
            flex-shrink: 0;
            transition: all .3s ease;
            display: flex;
            flex-direction: column;
        }

        .sidebar.collapsed {
            width: 0;
            padding: 0;
            overflow: hidden;
        }

        .brand {
            font-size: 20px;
            font-weight: 800;
            margin-bottom: 32px;
            color: #fff;
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 0 12px;
        }

        .nav {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .nav a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 14px;
            border-radius: 12px;
            color: #94a3b8;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s;
        }

        .nav a:hover, .nav a.active {
            background: var(--sidebar-hover);
            color: #fff;
        }

        .nav i {
            width: 20px;
            text-align: center;
            font-size: 18px;
        }

        .main {
            flex: 1;
            display: flex;
            flex-direction: column;
            background: #f8fafc;
        }

        .topbar {
            height: 64px;
            background: #fff;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 24px;
            flex-shrink: 0;
        }

        .top-left {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .menu-btn {
            font-size: 20px;
            background: none;
            border: none;
            cursor: pointer;
            color: var(--text-muted);
        }

        .page-title {
            font-weight: 700;
            font-size: 18px;
            color: #1e293b;
        }

        .content {
            flex: 1;
            overflow-y: auto;
            padding: 32px;
        }

        .footer {
            height: 48px;
            background: #fff;
            border-top: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 13px;
            color: #64748b;
        }

        @@media (max-width: 768px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: -260px;
                height: 100vh;
                z-index: 1100;
            }
            .sidebar.open { left: 0; }
            .mobile-overlay {
                position: fixed;
                inset: 0;
                background: rgba(15,23,42,.5);
                z-index: 1000;
                display: none;
            }
            .mobile-overlay.show { display: block; }
        }
    </style>
</head>
<body>

    <div class="mobile-overlay" id="overlay" onclick="closeSidebar()"></div>

    <div class="layout">
        <aside class="sidebar" id="sidebar">
            <div class="brand">
                <i class="fa-solid fa-briefcase text-primary"></i>
                <span>Business Portal</span>
            </div>

            <nav class="nav">
                <a href="@Url.Action("Index", "Home", new { area = "Business" })" class="active">
                    <i class="fa-solid fa-chart-line"></i> Dashboard
                </a>
                <a href="@Url.Action("Index", "Game", new { area = "Business" })">
                    <i class="fa-solid fa-gamepad"></i> My Games
                </a>
                <a href="@Url.Action("Create", "Game", new { area = "Business" })">
                    <i class="fa-solid fa-plus-circle"></i> Create New Game
                </a>
                <a href="#">
                    <i class="fa-solid fa-users"></i> Customers
                </a>
                <a href="#">
                    <i class="fa-solid fa-gear"></i> Profile Settings
                </a>
            </nav>

            <div class="mt-auto">
                <a href="@Url.Action("Logout", "Account", new { area = "Business" })" class="nav-link text-danger fw-bold d-flex align-items-center gap-2 px-3">
                    <i class="fa-solid fa-right-from-bracket"></i> Logout
                </a>
            </div>
        </aside>

        <div class="main">
            <header class="topbar">
                <div class="top-left">
                    <button class="menu-btn" onclick="toggleSidebar()"><i class="fa-solid fa-bars"></i></button>
                    <span class="page-title">@ViewData["Title"]</span>
                </div>

                <div class="dropdown">
                    <button class="btn btn-light d-flex align-items-center gap-2 fw-bold" data-bs-toggle="dropdown">
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width:32px; height:32px; font-size:14px;">
                            @(Context.Session.GetString("BusinessName")?.Substring(0,1) ?? "B")
                        </div>
                        @Context.Session.GetString("BusinessName")
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">My Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account", new { area = "Business" })">Logout</a></li>
                    </ul>
                </div>
            </header>

            <main class="content">
                @RenderBody()
            </main>

            <footer class="footer">
                &copy; 2026 Adminmstech Business Inc. All rights reserved.
            </footer>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById("sidebar");
        const overlay = document.getElementById("overlay");

        function toggleSidebar() {
            if (window.innerWidth <= 768) {
                sidebar.classList.toggle("open");
                overlay.classList.toggle("show");
            } else {
                sidebar.classList.toggle("collapsed");
            }
        }

        function closeSidebar() {
            sidebar.classList.remove("open");
            overlay.classList.remove("show");
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
