@{
    ViewData["Title"] = "Business Registration";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2563eb;
            --bg: #f8fafc;
            --text-main: #0f172a;
            --text-muted: #64748b;
        }

        body {
            margin: 0;
            background: var(--bg);
            font-family: 'Inter', sans-serif;
            display: flex;
            justify-content: center;
            padding: 40px 20px;
        }

        .reg-card {
            width: 100%;
            max-width: 600px;
            background: white;
            padding: 48px;
            border-radius: 24px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.05);
        }

        .header { text-align: center; margin-bottom: 40px; }
        .header h2 { font-size: 32px; font-weight: 800; color: var(--text-main); margin: 0; }
        .header p { color: var(--text-muted); margin-top: 8px; }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .full-width { grid-column: span 2; }

        .field { margin-bottom: 20px; }
        label { display: block; font-size: 14px; font-weight: 600; margin-bottom: 8px; color: var(--text-main); }
        input, textarea, select {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            font-size: 15px;
            outline: none;
            transition: all 0.3s;
        }
        input:focus, select:focus { border-color: var(--primary); box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1); }

        .btn-submit {
            width: 100%;
            padding: 16px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: 0.3s;
            margin-top: 10px;
        }
        .btn-submit:hover { background: #1d4ed8; transform: translateY(-1px); }

        .success-box {
            background: #f0fdf4;
            color: #166534;
            padding: 20px;
            border-radius: 12px;
            text-align: center;
            margin-bottom: 30px;
            border: 1px solid #bbf7d0;
        }

        .footer { text-align: center; margin-top: 32px; font-size: 14px; color: var(--text-muted); }
        .footer a { color: var(--primary); text-decoration: none; font-weight: 600; }

        @@media (max-width: 600px) {
            .form-grid { grid-template-columns: 1fr; }
            .full-width { grid-column: span 1; }
            .reg-card { padding: 32px 24px; }
        }
    </style>
</head>
<body>

    <div class="reg-card">
        <div class="header">
            <h2>Grow Your Business</h2>
            <p>Join our community network today</p>
        </div>

        @if (ViewBag.Message != null)
        {
            <div class="success-box">
                <i class="fa-solid fa-circle-check fa-2xl mb-3 d-block text-success"></i>
                @ViewBag.Message
                <div class="mt-3">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-sm btn-success">Back to Login</a>
                </div>
            </div>
        }
        else
        {
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post">
                <div class="form-grid">
                    <div class="field full-width">
                        <label>Business Name</label>
                        <input type="text" name="BusinessName" placeholder="e.g. Acme Services Ltd" required>
                    </div>
                    <div class="field">
                        <label>Business Category</label>
                        <select name="CategoryId" required>
                            <option value="1">Retail</option>
                            <option value="2">Services</option>
                            <option value="3">Hospitality</option>
                            <option value="4">Other</option>
                        </select>
                    </div>
                    <div class="field">
                        <label>Business Number (Reg No)</label>
                        <input type="text" name="BusinessNumber" placeholder="ABN/Reg No">
                    </div>
                    <div class="field">
                        <label>Owner Name</label>
                        <input type="text" name="OwnerName" placeholder="Full Name" required>
                    </div>
                    <div class="field">
                        <label>Contact Phone</label>
                        <input type="tel" name="Phone" placeholder="+1..." required>
                    </div>
                    <div class="field full-width">
                        <label>Email (Used for Login)</label>
                        <input type="email" name="Email" placeholder="email@business.com" required>
                    </div>
                    <div class="field full-width">
                        <label>Business Address</label>
                        <textarea name="Address" rows="2" placeholder="Street, City, Zip"></textarea>
                    </div>
                    <div class="field full-width">
                        <label>Password</label>
                        <input type="password" name="Password" required>
                    </div>
                </div>

                <button type="submit" class="btn-submit">Create Business Account</button>
            </form>
        }

        <div class="footer">
            Already have an account? <a href="@Url.Action("Login", "Account")">Sign In</a>
        </div>
    </div>

</body>
</html>
